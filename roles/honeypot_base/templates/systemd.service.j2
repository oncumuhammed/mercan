# =========================================================================
# Systemd Service Template for Honeypot: {{ honeypot_name }}
# =========================================================================
# This file is managed by Ansible. Manual changes will be overwritten.
# Generated: {{ ansible_date_time.iso8601 }}

[Unit]
Description=Honeypot Service - {{ honeypot_name | title }}
Documentation=https://github.com/oncumuhammed/mercan
After=docker.service network-online.target
Requires=docker.service
PartOf=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ honeypot_compose_dir }}
ExecStartPre=/usr/bin/docker compose pull
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose restart
TimeoutStartSec=0
Restart={{ 'on-failure' if systemd.restart_on_failure | default(true) else 'no' }}
RestartSec=10s

[Install]
WantedBy=multi-user.target
